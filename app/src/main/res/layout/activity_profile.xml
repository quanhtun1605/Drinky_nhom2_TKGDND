<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    tools:context="com.example.minhd.drinky.Activity.ProfileActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:background="#5db3e8"
            android:layout_width="match_parent"
            android:layout_height="64dp">

        </android.support.v7.widget.Toolbar>

        <TextView
            android:layout_marginTop="-40dp"
            android:textColor="#ffffff"
            android:text="Drinky"
            android:textSize="28sp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/img_searcProfile"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="-20dp"
            android:src="@drawable/ic_action_name"
            android:tint="@color/white" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/nguoi"
                    android:layout_width="56dp"
                    android:layout_height="56dp" />

                <TextView
                    android:textColor="#000000"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    android:layout_marginLeft="8dp"
                    android:text="VÄƒn Ba"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="#000000"
                        android:text="120"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textColor="#000000"
                        android:text="120"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="124dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="#000000"
                        android:text="Image"
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textColor="#000000"
                        android:text="Review and rating"
                        android:textSize="14sp"
                        android:layout_marginLeft="72dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:background="@drawable/background_dialog"
                    android:text="Edit your profile"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_width="240dp"
                    android:layout_height="32dp" />

            </LinearLayout>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcl_profile"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="400dp">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <com.roughike.bottombar.BottomBar
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginBottom="0dp"
        android:layout_alignParentBottom="true"
        app:bb_activeTabColor="#f48134"
        app:bb_tabXmlResource="@xml/bottombar_tabs_color_changing"
        app:bb_behavior="iconsOnly" />


</RelativeLayout>
